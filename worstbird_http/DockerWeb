FROM rustlang/rust:nightly as build

# create a new empty shell project
RUN USER=root cargo new --bin worstbird_http
WORKDIR /worstbird_http


# copy over your manifests
COPY ./Cargo.lock ./Cargo.lock
COPY .worstbird_http/Cargo.toml ./Cargo.toml

# this build step will cache your dependencies
RUN cargo build --release
RUN rm src/*.rs

RUN ls target/release/deps/

# copy your source tree
COPY ./src ./src
RUN mkdir -p ./templates
COPY ./templates ./templates

# build for release
RUN rm ./target/release/deps/worstbird_http*
RUN cargo build --release


FROM rustlang/rust:nightly

COPY --from=build /worstbird_http/target/release/worstbird_http .

#RUN mkdir -p ./www
#COPY ./www ./www
RUN mkdir -p ./templates
COPY ./templates ./templates

# Add docker-compose-wait tool -------------------
ENV WAIT_VERSION 2.7.2
ADD https://github.com/ufoscout/docker-compose-wait/releases/download/$WAIT_VERSION/wait /wait
RUN chmod +x /wait


CMD ["./ImageWebsiteTest"]
